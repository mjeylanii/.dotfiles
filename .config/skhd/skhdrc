# Change window focus on display
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# Maximize window
alt - m : yabai -m window --toggle zoom-fullscreen

# Float window
alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Change display focus
alt - u : yabai -m display --focus west
alt - i : yabai -m display --focus east

# Rotate layout
alt - r : yabai -m space --rotate 270

# Flip x/y-axis
alt - y : yabai -m space --mirror y-axis
alt - x : ybaai -m space --mirror x-axis

# Re-balance windows
alt - b : yabai -m space --balance

# Start/Stop Yabai
ctrl + alt - q : yabai --stop-services
ctrl + alt - s : yabai --start-services
